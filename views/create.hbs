<div class="task-create-container">
    <form class="create-form" action="/create" method="post">
      <div class="create-form-bg"></div>  
      <div class="theme-container">
        <div class="emoji-container">
            <label for="task-emoji">Choose Task Emoji</label>
            <input type="text" name="taskEmoji" value="ðŸ˜€" id="emoji-input" maxlength="1" required>
        </div>
        <emoji-picker class="light"></emoji-picker>
        <div class="color-container">
          <label for="task-color">Choose Task Theme</label>
          <input type="color" name="taskTheme" id="task-color" required>
        </div>
      </div>
      <div class="name-date-container">
        <div class="name-container">
          <label for="task-name" required>Task Name</label>
          <input type="text" maxlength="25" name="taskName" autocomplete="off" id="task-name" required>
        </div>
        <div class="date-container">
          <label for="task-datetime" required>Due Date</label>
          <input type="datetime-local" name="taskDatetime" id="task-datetime" required>
        </div>
      </div>
      <label for="textarea">Task Description</label>
      <textarea name="textArea" id="textarea" rows="13"></textarea>
      <div class="submit-container">
        <a href="/home">Cancel</a>
        <button type="submit" id="task-save">Save</button>
      </div>
    </form>
  </div>
</div>

